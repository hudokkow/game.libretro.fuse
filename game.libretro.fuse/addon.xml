<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.fuse"
		name="Spectrum (fuse)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.fuse.so"
                   library_linux="game.libretro.fuse.so"
                   library_osx="game.libretro.fuse.dylib"
                   library_windx="game.libretro.fuse.dll"
                   library_wingl="game.libretro.fuse.dll">
		<platforms>spectrum</platforms>
		<extensions>spec</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Fuse v1.0.1</summary>
		<description>Source: https://github.com/libretro/fuse-libretro</description>
		<platform>all</platform>
	</extension>
</addon>
